/* pages/post/index.wxss */
swiper{
  width: 100%;
  height: 520rpx;
}
swiper image{
  width: 100%;
}
.wrapper{
  background: #f8f8f8;
}
.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 2rpx solid #ededed;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 25px;
  padding: 10rpx 0;
  background: #fff;
}
.top{
  height: 60rpx;
  line-height: 60rpx;
}
.top .headImg{
  width: 60rpx;
  height: 60rpx;
  margin-left: 21rpx;
  margin-right: 40rpx;
  vertical-align: middle;
}
.top .data{
  font-size: 14px;
  color: #666;
}
.content{
  width: 100%;
  margin: 10rpx 0;
}
.content .title{
  margin-left: 21rpx;
  font-weight: 600;
  font-size: 21px;
}
.content .img{
  width: 100%;
  margin: 10px 0;
}
.content .info{
  display: block;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  padding-left: 20rpx;
  line-height: 40rpx;
  margin-bottom: 10px;
}
.bottom{
  font-size: 13px;
  display: flex;
  line-height: 16px;
  padding-left: 20rpx;
}
.bottom .icon{
  width: 33rpx;
  height: 33rpx;
  margin-right: 20rpx;
}
.bottom .number{
  margin-right: 40rpx;
}