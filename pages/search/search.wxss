/* pages/movie/movie.wxss */
.search-box{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
}
.search-box .icon{
  margin-right: 50rpx;
  padding-top: 10rpx;
  color: #333;
}
.search-box input{
  color: #333;
}
.placeholder{
  color: #333;
  font-size: 14px;
}
.search-box .none{
  flex: 1 0 0;
  text-align: center;
  color: #cdcdcd;
  font-size: 16px;
}
.movie-list{
  border-bottom: 1px solid #9e9e9e;
  padding: 10rpx 30rpx;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  flex-wrap: nowrap;
  margin: 10rpx 0;
}
.pic{
  width: 80rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.pic image{
  width: 100%;
  height: 100%;
}
.info{
  flex: 1 0 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.info .name{
  font-size: 32rpx;
  color: #4b4b4b;
  font-weight: 600;
}
.info .desc{
  font-size: 28rpx;
  color: #9e9e9e;
}
