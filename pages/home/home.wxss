/* pages/home/home.wxss */
@import "/pages/movie-grid/index.wxss";
.search-box{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
}
.search-box .icon{
  margin-right: 50rpx;
  padding-top: 10rpx;
  color: #333;
}
.search-box input{
  color: #333;
}
.placeholder{
  color: #333;
  font-size: 14px;
}
.search-box .none{
  flex: 1 0 0;
  text-align: center;
  color: #cdcdcd;
  font-size: 16px;
}
.page-session{
  margin-bottom: 50rpx;
}
.session-header{
  font-size: 16px;
}
.session-header{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.header-title{
  font-size: 18px;
}
.header-more{
  color: #37a;
  font-size: 14px;
}
/* scroll-view{
  display: flex;
